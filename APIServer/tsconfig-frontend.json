{
    "compilerOptions": {
        "downlevelIteration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es6",
        "lib": ["es2017", "dom", "dom.iterable"],
        "rootDir": "public/js",
        "outDir": "public/dist/",
        "module": "amd",
        "moduleResolution": "node",
        "strict": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "include": ["./public/**/*"]
}
