{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "ES2017",
        "lib": ["es2017"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node"]
    },
    "include": ["src/**/*"]
}
